<%= turbo_frame_tag :resource_modal, target: "_top" do %>
  <%= render component("ui/modal").new(title: t(".title")) do |modal| %>
    <%= solidus_form_for @store_credit, url: form_url, method: :post, html: { id: form_id } do |f| %>
      <div class="flex flex-col gap-6 pb-4">
        <%= f.text_field(:amount, class: "required") %>
        <%= f.select(
          :currency,
          currency_select_options.html_safe,
          include_blank: t("spree.currency"),
          html: { required: true }
        ) %>
        <%= f.select(
          :category_id,
          store_credit_categories_select_options.html_safe,
          include_blank: t("spree.category"),
          html: { required: true }
        ) %>
        <%= f.text_field(:memo) %>
      </div>
      <% modal.with_actions do %>
        <form method="dialog">
          <%= render component("ui/button").new(scheme: :secondary, text: t(".cancel")) %>
        </form>
        <%= f.submit %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
